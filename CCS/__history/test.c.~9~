#include <test.h>

#INT_EXT
boolean flag0 =0;
boolean flag1 =0;
#define LED_PIN_ALARM RB6
#define LED_PIN_GREEN RB7
void  EXT_isr(void) 
{

}

#INT_EXT1
void  EXT1_isr(void) 
{

}

void main()
{
   int val =0;
   enable_interrupts(INT_EXT);
   enable_interrupts(INT_EXT1);
   enable_interrupts(GLOBAL);
   setup_low_volt_detect(FALSE);

   while(TRUE)
   {  
      RBPU = 0;
      LED_PIN_GREEN =1   
      output_d(val);
      delay_ms(250);
      LED_PIN_GREEN =0
      val++;
      if(val == 99){
         LED_PIN_ALARM =1
         val =0;
         delay_ms(250);
         LED_PIN_ALARM =0
      }

   }

}
