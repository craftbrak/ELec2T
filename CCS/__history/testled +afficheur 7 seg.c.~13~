#include <testled +afficheur 7 seg.h>

void main()
{
   int val = 0;
   setup_low_volt_detect(FALSE);

   while(TRUE)
   {
      PORTB.F0 = 1;  
      output_d(val);
      delay_ms(250);
      LED_GREEN = 0;
      val++;
      if(val == 99){
         LED_ALARM =1
         val =0;
         delay_ms(250);
         LED_ALARM =0;
      }
   }

}
